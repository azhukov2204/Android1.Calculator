<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeApp" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryDark">@color/teal_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

    </style>

    <style name="ThemeKeyboard">
        <item name="android:textSize">@dimen/buttonsTextSize</item>
        <item name="android:gravity">center</item>
        <item name="shapeAppearanceOverlay">@style/MyShapeAppearance</item>
    </style>
    <style name="MyShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/cornerSize</item>
    </style>

    <style name="CutButtons">
        <item name="android:backgroundTint">@color/DarkGoldenRod</item>
    </style>

    <style name="ActionButtons">
        <item name="android:backgroundTint">@color/gray</item>
    </style>

    <style name="ThemeLayout">
        <item name="android:background">@drawable/font</item>
        <item name="android:backgroundTint">@color/teal_200</item>
        <item name="android:backgroundTintMode">screen</item>
    </style>

    <style name="ThemeMainDisplay" parent="ThemeDisplays">
        <item name="android:background">@color/teal_200</item>
        <item name="android:layout_height">@dimen/mainDisplayHeight</item>>
        <item name="android:textSize">@dimen/mainDisplayTextSize</item>>
    </style>

    <style name="ThemeDisplays">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">@dimen/marginStart</item>
        <item name="android:layout_marginTop">@dimen/defaultMargin</item>
        <item name="android:layout_marginEnd">@dimen/marginEnd</item>
        <item name="android:layout_marginBottom">@dimen/defaultMargin</item>
        <item name="android:gravity">end</item>
        <item name="android:textSize">@dimen/historyDisplayTextSize</item>
        <item name="android:text" />
    </style>

</resources>