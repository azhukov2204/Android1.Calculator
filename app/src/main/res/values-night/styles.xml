<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeApp" parent="Theme.MaterialComponents">
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/design_dark_default_color_background</item>
        <!--<item name="android:textColor">#E65C5C</item> -->
        <item name="android:textColor">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
    </style>

    <style name="ThemeMainDisplay" parent="ThemeDisplays">
        <item name="android:background">@color/dark_gray</item>
        <item name="android:layout_height">@dimen/mainDisplayHeight</item>>
        <item name="android:textSize">@dimen/mainDisplayTextSize</item>>
    </style>

    <style name="ThemeLayout">
        <item name="android:background">@drawable/font</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:backgroundTintMode">screen</item>
    </style>

    <style name="CutButtons">
        <item name="android:backgroundTint">@color/dark_gray</item>
    </style>

    <style name="ActionButtons">
        <item name="android:backgroundTint">@color/dark_gray</item>
    </style>

</resources>